<section class="inhabitu-emphasize section">
	<div class="container">
		<span class="heading">Share this article</span>
		<div class="box">
			<div class="level is-mobile">
			<div class="level-item">
				<a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" title="Twitter" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="inhabitu-twitter tag icon is-large is-primary"></i></a>
			</div>
			<div class="level-item">
		        <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" title="Facebook" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
	            <i class="inhabitu-facebook tag icon is-large is-primary"></i></a>
	        </div>
	        <div class="level-item">
		        <a href="https://plus.google.com/share?url={{url absolute="true"}}" title="Google+" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="inhabitu-google tag icon is-large is-primary"></i></a>		        
        	</div>
        	<div class="level-item">
		        <a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}&title={{encode title}}&source={{@blog.title}}" title="LinkedIn" onclick="window.open(this.href, 'linkedin-share', 'width=490,height=530');return false;"><i class="inhabitu-linkedin tag icon is-large is-primary"></i></a>		        
        	</div>
        </div>
    </div>
</section>
